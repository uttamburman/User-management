    <script>
 
    var table02;
    $(document).ready(function(){
        table02 = $('.table02').DataTable({
            // "lengthMenu": [[2, 3, 4, -1], [2, 3, 4, "All"]],
        });
        $('#deleteAllBtn').attr( 'class', 'btn btn-danger disabled' );   
        // Handle click on "Select all" control
        $('#selectAll').on('click', function(){
            $('#deleteAllBtn').attr( 'class', 'btn btn-danger enabled' );   
            // Get all rows with search applied
            var rows = table02.rows({ 'search': 'applied' }).nodes();
            // Check/uncheck checkboxes for all rows in the table
            $('input[type="checkbox"]', rows).prop('checked', this.checked);
            if(!this.checked){
                $('#deleteAllBtn').attr( 'class', 'btn btn-danger disabled' );  
                }              
        });

        $('#addEmployeeModal').on('hidden.bs.modal', function () {
            $(this).find("input,textarea,select").val('').end();

        });
        

        // Handle click on checkbox to set state of "Select all" control
        $('.table02 tbody').on('change', 'input[type="checkbox"]', function(){
            var rows = table02.rows({ 'search': 'applied' }).nodes();
            var numberOfChecked = $('input:checkbox:checked', rows);
            var numberOfCheckBox = $('input:checkbox', rows);
            if(numberOfChecked.length==numberOfCheckBox.length){
                $('#selectAll').prop("checked",true);
            }else{
                $('#deleteAllBtn').attr( 'class', 'btn btn-danger enabled' ); 
                $('#selectAll').prop("checked",false); 
            }
        });

    });
    function edit_data(emp_id){ 
        var url = "/get_emp_data/edit/"+emp_id;
        $.get(url, function(data, status){
            if(status=="success"){
                var emp_data = data[0];
                console.log(emp_data);
                $("#empdataId02").val(emp_data.id);
                $("#empNameId").val(emp_data.user_name);
                $("#empEmailId").val(emp_data.name);
                $("#addroleId02").val(emp_data.role);
                $("#empISIDData").val(emp_data.isid);
                $("#Tableupdatesubmit").attr('action',' /emp_datatbl02/update/'+emp_data.id);
            }   
                    
        });
        $("#editModal").click();
    }
   
     
   function deleteEmp(id){
