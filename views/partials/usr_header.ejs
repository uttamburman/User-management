        $("#deletemodalform").attr('action',url)
        $("#deletemodelbtn").click();
      
   }

    function deleteTbldata(){ 
        var rows = table02.rows({ 'search': 'applied' }).nodes();
        var numberOfChecked = $('input:checkbox:checked', rows);
        var numberOfCheckBox = $('input:checkbox', rows);
        var arrayIds = [];
 
        numberOfChecked.each(function(){
            arrayIds.push($(this).val());
        });
        var type = "";
        if(numberOfCheckBox.length==arrayIds.length){
            type="all"
            arrayIds = []
        }else{
            type="selected"
        }
       if ( arrayIds.length >0){
          
        var valueMap = {
            "type": type,
            "itemids": arrayIds
        }
        var url = "/emp_datatbl02/deteleSelected_data"
